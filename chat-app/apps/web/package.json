{
  "name": "@chat/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @chat/shared build",
    "dev": "vite",
    "prebuild": "pnpm --filter @chat/shared build",
    "build": "tsc -p tsconfig.json && vite build",
    "preview": "vite preview --port 4173",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"e2e/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pretest": "pnpm --filter @chat/shared build",
    "test": "vitest run",
    "pretest:e2e": "pnpm --filter @chat/shared build",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@chat/shared": "workspace:*",
    "emoji-picker-react": "^4.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "jsdom": "^25.0.1",
    "vite": "^5.4.9",
    "vitest": "^2.1.4"
  }
}
