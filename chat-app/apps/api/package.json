{
  "name": "@chat/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @chat/shared build",
    "dev": "tsx watch src/server.ts",
    "dev:e2e": "cross-env USE_IN_MEMORY_DB=true NODE_ENV=test tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
    "prestart": "pnpm --filter @chat/shared build",
    "start": "node dist/server.js",
    "preseed": "pnpm --filter @chat/shared build",
    "seed": "tsx src/scripts/seed.ts",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "pretest": "pnpm --filter @chat/shared build",
    "test": "vitest run"
  },
  "dependencies": {
    "@chat/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1",
    "socket.io": "^4.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.2",
    "mongodb-memory-server": "^10.1.3",
    "socket.io-client": "^4.8.0",
    "supertest": "^7.0.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.1",
    "vitest": "^2.1.4"
  }
}
