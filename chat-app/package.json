{
  "name": "chat-app",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @chat/api dev\" \"pnpm --filter @chat/web dev\"",
    "dev:e2e": "concurrently \"pnpm --filter @chat/api dev:e2e\" \"pnpm --filter @chat/web dev --host 127.0.0.1 --port 5173\"",
    "build": "pnpm -r --filter @chat/shared --filter @chat/api --filter @chat/web build",
    "lint": "pnpm -r --filter @chat/shared --filter @chat/api --filter @chat/web lint",
    "typecheck": "pnpm -r --filter @chat/shared --filter @chat/api --filter @chat/web typecheck",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "pnpm -r --filter @chat/shared --filter @chat/api --filter @chat/web test",
    "test:e2e": "pnpm --filter @chat/web test:e2e",
    "seed": "pnpm --filter @chat/api seed",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
